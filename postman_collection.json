{
  "info": {
    "name": "Books Crawler API",
    "description": "Collection for testing the Books Crawler API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "bearer_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearer_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"user_id\", jsonData.user_id);",
                  "    pm.environment.set(\"user_id\", jsonData.user_id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "description": "Register a new user. No authentication required."
          },
          "response": []
        },
        {
          "name": "Create API Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"bearer_token\", jsonData.api_key);",
                  "    pm.environment.set(\"bearer_token\", jsonData.api_key);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"name\": \"Test API Key\",\n  \"rate_limit\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/create-key",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "create-key"]
            },
            "description": "Create an API key for the registered user. Use the user_id from registration."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for user registration and API key creation"
    },
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Root Endpoint",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"]
            }
          },
          "response": []
        },
        {
          "name": "Get Books - Filter by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books?category=Fiction",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"],
              "query": [
                {
                  "key": "category",
                  "value": "Fiction"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Books - Filter by Price Range",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books?min_price=10&max_price=30",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"],
              "query": [
                {
                  "key": "min_price",
                  "value": "10"
                },
                {
                  "key": "max_price",
                  "value": "30"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Books - Filter by Rating",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books?rating=5",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"],
              "query": [
                {
                  "key": "rating",
                  "value": "5"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Books - Sort by Price",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books?sort_by=price",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"],
              "query": [
                {
                  "key": "sort_by",
                  "value": "price"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Books - Combined Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books?category=Fiction&min_price=15&max_price=50&rating=4&sort_by=rating&page=1&page_size=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books"],
              "query": [
                {
                  "key": "category",
                  "value": "Fiction"
                },
                {
                  "key": "min_price",
                  "value": "15"
                },
                {
                  "key": "max_price",
                  "value": "50"
                },
                {
                  "key": "rating",
                  "value": "4"
                },
                {
                  "key": "sort_by",
                  "value": "rating"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/books/:book_id",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "books", ":book_id"],
              "variable": [
                {
                  "key": "book_id",
                  "value": "BOOK_ID_HERE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Changes",
      "item": [
        {
          "name": "Get All Changes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/changes",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "changes"]
            }
          },
          "response": []
        },
        {
          "name": "Get Changes - New Books Only",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/changes?change_type=new",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "changes"],
              "query": [
                {
                  "key": "change_type",
                  "value": "new"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Changes - Updated Books Only",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/changes?change_type=updated",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "changes"],
              "query": [
                {
                  "key": "change_type",
                  "value": "updated"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Changes - Last 30 Days",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/changes?days=30",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "changes"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
